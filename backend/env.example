# =====================================================
# WeRaise Crowdfunding Platform - Environment Variables
# =====================================================
# This file contains all necessary environment variables
# for the backend server configuration.
# =====================================================

# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=https://ckkuqkicizthpllvnzxu.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =====================================================
# JWT AUTHENTICATION SECRETS
# =====================================================
# Generate strong random strings for production
# Use: openssl rand -base64 64
JWT_ACCESS_SECRET=your_very_long_random_string_for_access_token_generate_with_openssl_rand_base64_64
JWT_REFRESH_SECRET=your_another_very_long_random_string_for_refresh_token_generate_with_openssl_rand_base64_64

# =====================================================
# DATABASE CONFIGURATION (if using direct PostgreSQL)
# =====================================================
# DATABASE_URL=postgresql://username:password@localhost:5432/crowdfunding_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=crowdfunding_db
# DB_USER=username
# DB_PASSWORD=password

# =====================================================
# PAYMENT PROCESSING (Stripe)
# =====================================================
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =====================================================
# PAYMENT PROCESSING (PayPal)
# =====================================================
# PayPal Sandbox credentials (for development)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox

# PayPal Live credentials (for production)
# PAYPAL_CLIENT_ID=your_live_paypal_client_id_here
# PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret_here
# PAYPAL_ENVIRONMENT=live

# PayPal Webhook ID (for webhook verification)
# PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# =====================================================
# GOOGLE OAUTH 2.0 CONFIGURATION
# =====================================================
GOOGLE_CLIENT_ID="<YOUR_GOOGLE_CLIENT_ID>"
GOOGLE_CLIENT_SECRET="<YOUR_GOOGLE_CLIENT_SECRET>"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# =====================================================
# SESSION CONFIGURATION (for Passport)
# =====================================================
SESSION_SECRET="<A_RANDOM_STRING_FOR_PASSPORT_SESSION>"

# =====================================================
# EMAIL CONFIGURATION (Nodemailer/SMTP)
# =====================================================
EMAIL_HOST_SERVICE="<YOUR_SMTP_SERVICE>"
EMAIL_USER="<YOUR_SERVICE_EMAIL_ADDRESS>"
EMAIL_PASS="<YOUR_SERVICE_PASSWORD_OR_APP_KEY>"
EMAIL_FROM_NAME="WeRaise Platform"
EMAIL_FROM_ADDRESS="noreply@werase.com"

# SMTP Configuration (for Gmail example)
# EMAIL_HOST_SERVICE="gmail"
# EMAIL_USER="your_email@gmail.com"
# EMAIL_PASS="your_app_password"

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=werase-uploads

# =====================================================
# CLOUDINARY CONFIGURATION
# =====================================================
CLOUDINARY_CLOUD_NAME="<YOUR_CLOUD_NAME>"
CLOUDINARY_API_KEY="<YOUR_API_KEY>"
CLOUDINARY_API_SECRET="<YOUR_API_SECRET>"

# =====================================================
# REDIS CONFIGURATION (for caching)
# =====================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# CORS_ORIGIN=http://localhost:5173,https://yourdomain.com
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# FEATURE FLAGS
# =====================================================
# ENABLE_REGISTRATION=true
# ENABLE_EMAIL_VERIFICATION=true
# ENABLE_TWO_FACTOR_AUTH=false
# ENABLE_ANALYTICS=true
